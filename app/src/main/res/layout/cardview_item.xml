<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="140dp"
    android:layout_marginLeft="14dp"
    android:layout_marginRight="14dp"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp"
    card_view:cardCornerRadius="4dp"
    android:elevation="5dp"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tv_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="location"
            android:textSize="16sp"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="20dp"/>

        <TextView
            android:id="@+id/tv_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="description"
            android:layout_below="@id/tv_location"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="20dp"/>

        <TextView
            android:id="@+id/tv_temperature"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="36sp"
            android:layout_below="@id/tv_description"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="20dp"/>

        <TextView
            android:id="@+id/tv_updateTimeLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/lastup"
            android:textSize="10sp"
            android:layout_alignTop="@id/tv_temperature"
            android:layout_marginTop="10dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="40dp"
            />

        <TextView
            android:id="@+id/tv_updateTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12:02 AM"
            android:textSize="10sp"
            android:layout_below="@id/tv_updateTimeLabel"
            android:layout_marginTop="4dp"
            android:layout_alignLeft="@id/tv_updateTimeLabel"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView"
            android:layout_above="@+id/tv_temperature"
            android:layout_alignLeft="@+id/tv_updateTimeLabel"
            android:layout_alignStart="@+id/tv_updateTimeLabel" />

    </RelativeLayout>

    </android.support.v7.widget.CardView>